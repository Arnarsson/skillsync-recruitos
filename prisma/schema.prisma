generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  githubId      String    @unique
  githubToken   String?

  // Credits & Subscription
  credits       Int       @default(5)
  plan          Plan      @default(FREE)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  profileViews  ProfileView[]
  searches      Search[]
  payments      Payment[]
}

model ProfileView {
  id          String   @id @default(cuid())
  userId      String
  username    String   // GitHub username viewed
  creditUsed  Boolean  @default(false)
  viewedAt    DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([username])
}

model Search {
  id        String   @id @default(cuid())
  userId    String
  query     String
  results   Int      @default(0)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripePaymentId String   @unique
  amount          Int      // in cents
  credits         Int      // credits purchased
  status          String
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SharedProfile {
  id            String   @id @default(cuid())
  
  // Candidate info
  candidateId   String   // GitHub username or internal ID
  name          String
  currentRole   String?
  company       String?
  location      String?
  avatar        String?
  skills        String[] // Array of skill strings
  yearsExperience Int?
  
  // Personality & Analysis (stored as JSON)
  persona       Json?    // Full persona object
  scoreBreakdown Json?   // Score breakdown object
  keyEvidence   Json?    // Array of evidence items
  risks         Json?    // Array of risk items
  alignmentScore Int     @default(0)
  
  // Sharing metadata
  createdBy     String?  // User ID who created the share
  viewCount     Int      @default(0)
  isActive      Boolean  @default(true)
  expiresAt     DateTime?
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([candidateId])
  @@index([createdBy])
  @@index([isActive])
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}
