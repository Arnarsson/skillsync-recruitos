generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  githubId      String?   @unique
  githubToken   String?
  passwordHash  String?

  // Credits & Subscription
  credits       Int       @default(3)
  plan          Plan      @default(FREE)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  profileViews  ProfileView[]
  searches      Search[]
  payments      Payment[]
  candidates    Candidate[]
  creditLedger  CreditLedger[]
}

model ProfileView {
  id          String   @id @default(cuid())
  userId      String
  username    String   // GitHub username viewed
  creditUsed  Boolean  @default(false)
  viewedAt    DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([username])
}

model Search {
  id        String   @id @default(cuid())
  userId    String
  query     String
  results   Int      @default(0)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripePaymentId String   @unique
  stripeSessionId String?
  amount          Int      // in cents
  currency        String   @default("dkk")
  credits         Int      // credits purchased
  packageId       String?
  status          String
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SharedProfile {
  id            String   @id @default(cuid())
  
  // Candidate info
  candidateId   String   // GitHub username or internal ID
  name          String
  currentRole   String?
  company       String?
  location      String?
  avatar        String?
  skills        Json?    // Array of skill strings (Json for SQLite compat)
  yearsExperience Int?
  
  // Personality & Analysis (stored as JSON)
  persona       Json?    // Full persona object
  scoreBreakdown Json?   // Score breakdown object
  keyEvidence   Json?    // Array of evidence items
  risks         Json?    // Array of risk items
  alignmentScore Int     @default(0)
  
  // Sharing metadata
  createdBy     String?  // User ID who created the share
  viewCount     Int      @default(0)
  isActive      Boolean  @default(true)
  expiresAt     DateTime?
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([candidateId])
  @@index([createdBy])
  @@index([isActive])
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
  ANNUAL
}

enum SourceType {
  GITHUB
  LINKEDIN
  MANUAL
}

model Candidate {
  id              String   @id @default(cuid())
  userId          String?

  // Identity (shared fields, normalized)
  name            String
  headline        String?
  currentRole     String?
  company         String?
  location        String?
  avatar          String?

  // Source tracking
  sourceType      SourceType
  githubUsername   String?
  linkedinId      String?
  linkedinUrl     String?
  sourceUrl       String?

  // Experience
  yearsExperience Int?
  experience      Json?
  education       Json?
  certifications  Json?
  spokenLanguages Json?

  // Skills
  skills          Json?
  codingLanguages Json?

  // AI Scoring
  alignmentScore  Float?
  scoreBreakdown  Json?
  scoreConfidence String?
  scoreDrivers    Json?     // String[] stored as Json for SQLite compat
  scoreDrags      Json?     // String[] stored as Json for SQLite compat

  // AI Analysis
  persona         Json?
  deepAnalysis    String?
  companyMatch    Json?
  indicators      Json?
  interviewGuide  Json?
  networkDossier  Json?
  advancedProfile Json?
  buildprint      Json?

  // Pipeline
  pipelineStage   String    @default("sourced")
  unlockedSteps   Json?     // Int[] stored as Json for SQLite compat
  shortlistSummary String?
  keyEvidence     Json?     // String[] stored as Json for SQLite compat
  risks           Json?     // String[] stored as Json for SQLite compat

  // LinkedIn-specific signals
  connectionDegree   String?
  mutualConnections  String?
  openToWork         Boolean?
  isPremium          Boolean?
  rawProfileText     String?

  // Metadata
  capturedAt      DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes           CandidateNote[]

  @@unique([githubUsername, userId])
  @@unique([linkedinId, userId])
  @@index([userId])
  @@index([pipelineStage])
  @@index([alignmentScore])
  @@index([sourceType])
}

model CandidateNote {
  id          String   @id @default(cuid())
  candidateId String
  author      String
  content     String
  tags        Json?    // String[] stored as Json for SQLite compat
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

enum CreditReason {
  CONSUMPTION
  PURCHASE
  SUBSCRIPTION
  SIGNUP_BONUS
  REFUND
  ADMIN
}

model CreditLedger {
  id        String       @id @default(cuid())
  userId    String
  delta     Int          // positive = credit, negative = debit
  reason    CreditReason
  balance   Int          // balance after this entry
  metadata  Json?
  createdAt DateTime     @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
