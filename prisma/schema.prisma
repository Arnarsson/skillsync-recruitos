generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  githubId      String    @unique
  githubToken   String?

  // Credits & Subscription
  credits       Int       @default(3)
  plan          Plan      @default(FREE)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  profileViews  ProfileView[]
  searches      Search[]
  payments      Payment[]
  candidates    Candidate[]
}

model ProfileView {
  id          String   @id @default(cuid())
  userId      String
  username    String   // GitHub username viewed
  creditUsed  Boolean  @default(false)
  viewedAt    DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([username])
}

model Search {
  id        String   @id @default(cuid())
  userId    String
  query     String
  results   Int      @default(0)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripePaymentId String   @unique
  amount          Int      // in cents
  credits         Int      // credits purchased
  status          String
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SharedProfile {
  id            String   @id @default(cuid())
  
  // Candidate info
  candidateId   String   // GitHub username or internal ID
  name          String
  currentRole   String?
  company       String?
  location      String?
  avatar        String?
  skills        String[] // Array of skill strings
  yearsExperience Int?
  
  // Personality & Analysis (stored as JSON)
  persona       Json?    // Full persona object
  scoreBreakdown Json?   // Score breakdown object
  keyEvidence   Json?    // Array of evidence items
  risks         Json?    // Array of risk items
  alignmentScore Int     @default(0)
  
  // Sharing metadata
  createdBy     String?  // User ID who created the share
  viewCount     Int      @default(0)
  isActive      Boolean  @default(true)
  expiresAt     DateTime?
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([candidateId])
  @@index([createdBy])
  @@index([isActive])
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

enum SourceType {
  GITHUB
  LINKEDIN
  MANUAL
}

model Candidate {
  id              String   @id @default(cuid())
  userId          String?

  // Identity (shared fields, normalized)
  name            String
  headline        String?
  currentRole     String?
  company         String?
  location        String?
  avatar          String?

  // Source tracking
  sourceType      SourceType
  githubUsername   String?
  linkedinId      String?
  linkedinUrl     String?
  sourceUrl       String?

  // Experience
  yearsExperience Int?
  experience      Json?
  education       Json?
  certifications  Json?
  spokenLanguages Json?

  // Skills
  skills          Json?
  codingLanguages Json?

  // AI Scoring
  alignmentScore  Float?
  scoreBreakdown  Json?
  scoreConfidence String?
  scoreDrivers    String[]  @default([])
  scoreDrags      String[]  @default([])

  // AI Analysis
  persona         Json?
  deepAnalysis    String?
  companyMatch    Json?
  indicators      Json?
  interviewGuide  Json?
  networkDossier  Json?
  advancedProfile Json?
  buildprint      Json?

  // Pipeline
  pipelineStage   String    @default("sourced")
  unlockedSteps   Int[]     @default([])
  shortlistSummary String?
  keyEvidence     String[]  @default([])
  risks           String[]  @default([])

  // LinkedIn-specific signals
  connectionDegree   String?
  mutualConnections  String?
  openToWork         Boolean?
  isPremium          Boolean?
  rawProfileText     String?

  // Metadata
  capturedAt      DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes           CandidateNote[]

  @@unique([githubUsername, userId])
  @@unique([linkedinId, userId])
  @@index([userId])
  @@index([pipelineStage])
  @@index([alignmentScore])
  @@index([sourceType])
}

model CandidateNote {
  id          String   @id @default(cuid())
  candidateId String
  author      String
  content     String
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}
